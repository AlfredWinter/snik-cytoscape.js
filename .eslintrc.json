{
	"parserOptions":
	{
		"ecmaVersion":6,
		"ecmaFeatures":
		{
			"impliedStrict": true
		}
	},
	"env":
	{
		"browser": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"rules":
	{
		"indent": ["error",2],
		"quotes": ["warn","single"],
		"semi": ["error","always"],
		"no-use-before-define": ["error"],
		"no-shadow": ["warn"]
	}
}